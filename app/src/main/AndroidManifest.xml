<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toledorobia.cariocascore">

    <application
        android:name=".CariocaScoreApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CariocaScore">
        <activity
            android:name=".ui.view.activity.RoundFormActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.GamePanelActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.PlayerFormActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.GameWizardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>