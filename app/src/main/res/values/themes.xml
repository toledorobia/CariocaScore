<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CariocaScore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.CariocaScore</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="Badge" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BadgeSecondary" parent="Badge">
        <item name="android:background">@drawable/badge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BadgeSuccess" parent="Badge">
        <item name="android:background">@drawable/badge_success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BadgeWarning" parent="Badge">
        <item name="android:background">@drawable/badge_warning</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BadgeDanger" parent="Badge">
        <item name="android:background">@drawable/badge_danger</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>